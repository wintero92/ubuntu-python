FROM ubuntu:22.04

RUN apt update \
        && \
    apt install -y \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    ffmpeg \
    python3 \
    python3-pip \
        && \
    pip install --no-cache-dir poetry

CMD [ "bash" ]
